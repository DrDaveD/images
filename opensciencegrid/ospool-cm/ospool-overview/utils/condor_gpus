#!/bin/bash

echo "  Count  Resource                                          GPU                           CUDAVersion  CUDACapability"
echo " ======  ================================================  ============================  ===========  =============="
condor_status -const 'GPUs > 0' -format " %-50s" GLIDEIN_Site -format "%-30s" GPUS_DeviceName -format "%-13s" GPUS_DriverVersion -format "%-10s\n" GPUS_Capability | sort | uniq -c

